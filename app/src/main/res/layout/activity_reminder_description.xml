<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--Data item that holds the reminder details-->
        <variable
            name="reminderDataItem"
            type="com.udacity.project4.locationreminders.reminderslist.ReminderDataItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".locationreminders.ReminderDescriptionActivity">

        <ImageView
            android:id="@+id/image_exclamation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/exclamation_mark"
            android:src="@drawable/reminder_image" />


        <TextView
            android:id="@+id/text_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fui_body_padding_bottom"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="@string/reminder_details"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_extra_large" />

        <TextView
            android:id="@+id/text_reminder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fui_body_padding_bottom"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tect_reminder_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fui_body_padding_bottom"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_medium" />


    </LinearLayout>
</layout>